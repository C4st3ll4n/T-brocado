<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.ifood.cursoandroid.ifood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.usuario.ConfiguracoesUsuarioActivity"
            android:parentActivityName=".activity.usuario.HomeActivity"></activity>

        <activity
            android:name=".activity.empresa.NovoProdutoEmpresaActivity"
            android:parentActivityName=".activity.empresa.EmpresaActivity" />
        <activity
            android:name=".activity.empresa.ConfiguracoesEmpresaActivity"
            android:parentActivityName=".activity.empresa.EmpresaActivity" />
        <activity android:name=".activity.empresa.EmpresaActivity" />

        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AutenticacaoActivity" />
        <activity android:name=".activity.usuario.HomeActivity" />
    </application>

</manifest>